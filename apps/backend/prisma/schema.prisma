generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  moods     Mood[]
  tasks     Task[]
  plannings Planning[]

  @@map("users")
}

model Mood {
  id        String   @id @default(cuid())
  userId    String
  level     Int      // 1-5 scale
  emotions  String[]
  energy    Int?     @db.SmallInt
  context   String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("moods")
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

enum TaskCategory {
  CREATIVE
  ADMIN
  MEETING
  LEARNING
  PERSONAL
}

model Task {
  id                String       @id @default(cuid())
  userId            String
  title             String
  description       String?
  priority          TaskPriority @default(MEDIUM)
  status            TaskStatus   @default(PENDING)
  category          TaskCategory
  estimatedDuration Int          // minutes
  actualDuration    Int?         // minutes
  scheduledFor      DateTime?
  completedAt       DateTime?
  createdAt         DateTime     @default(now())
  updatedAt         DateTime     @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("tasks")
}

model Planning {
  id                  String   @id @default(cuid())
  userId              String
  date                DateTime @db.Date
  mood                Int      @db.SmallInt
  aiRecommendations   String
  totalEstimatedTime  Int      // minutes
  actualProductivity  Int?     @db.SmallInt
  createdAt           DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, date])
  @@map("plannings")
}